<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#E1E4E6"
        android:elevation="6dp">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tish olish"
            android:layout_gravity="center_vertical"
            android:textSize="20dp"
            android:padding="6dp"
            android:layout_marginStart="4dp"
            android:id="@+id/name_price_list"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#CBCED5"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:padding="6dp"
                android:src="@drawable/baseline_currency_yen_24"
                android:id="@+id/currency_price_list"/>
        <TextView
            android:layout_marginStart="4dp"
            android:padding="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="150 000"
            android:layout_gravity="center_vertical"
            android:textSize="18dp"
            android:id="@+id/price_price_list"/>
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#D4D7DD"/>


</LinearLayout>









